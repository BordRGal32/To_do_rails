<h1>To Do List</h1>
<p><a href="/tasks/new">New Task</a></p>
<ul>
  <h2>To Do:</h2>
  <% @not_done_tasks.each do |task| %>
    <li><a href="/tasks/<%= task.id %>"><%= task.name %></a></li>
  <% end %>
</ul>
<ul>
  <h2>Completed:</h2>
  <% @done_tasks.each do |task| %>
    <li><a href="/tasks/<%= task.id %>"><%= task.name %></a></li>
  <% end %>
</ul>
